        android:text="123" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:text="56872" />

</TableRow>
